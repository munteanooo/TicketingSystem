<MudDialog>
    <TitleContent><MudText Typo="Typo.h6">Tichet Nou</MudText></TitleContent>
    <DialogContent>
        <MudTextField Label="Titlu" @bind-Value="Model.Title" Margin="Margin.Normal" />
        <MudTextField Label="Descriere" @bind-Value="Model.Description" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="() => MudDialog.Cancel()">Anulare</MudButton>
        <MudButton Color="Color.Primary" OnClick="() => MudDialog.Close(DialogResult.Ok(Model))">Trimite</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    public CreateTicketDto Model { get; set; } = new();
}