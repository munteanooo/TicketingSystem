@page "/login"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using TicketingSystem.Blazor.Services
@inject AuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Autentificare</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>Email</label>
                        <input @bind="email" class="form-control" placeholder="nume@exemplu.com" />
                    </div>
                    <div class="mb-3">
                        <label>Parolă</label>
                        <input @bind="password" type="password" class="form-control" @onkeyup="HandleKeyUp" />
                    </div>

                    <button class="btn btn-primary w-100" @onclick="HandleLogin">Intră în cont</button>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">@errorMessage</div>
                    }

                    <div class="mt-3 text-center">
                        <p>Nu ai cont? <a href="/register">Înregistrează-te aici</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        errorMessage = "";
        try
        {
            // 1. AuthService face cererea la API și returnează string-ul Token-ului (sau null)
            // Notă: Modifică AuthService.Login să returneze string (token) în loc de bool dacă poți,
            // sau asigură-te că stochezi token-ul în AuthService.

            bool isSuccess = await AuthService.Login(email, password);

            if (isSuccess)
            {
                // 2. Notificăm provider-ul de stare că suntem autentificați.
                // Facem cast la clasa noastră custom pentru a accesa metoda MarkUserAsAuthenticated
                var authProvider = (ApiAuthenticationStateProvider)AuthStateProvider;

                // Luăm token-ul proaspăt salvat (asigură-te că AuthService îl pune în LocalStorage înainte)
                await authProvider.GetAuthenticationStateAsync();

                Nav.NavigateTo("/tickets");
            }
            else
            {
                errorMessage = "Email sau parolă incorectă!";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            errorMessage = "Eroare de conexiune cu serverul.";
        }
    }

    // Mic bonus: Login la apăsarea tastei Enter
    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }
}