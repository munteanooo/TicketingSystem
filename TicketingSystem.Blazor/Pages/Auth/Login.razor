@page "/login"
@using Microsoft.AspNetCore.Authorization
@using TicketingSystem.Blazor.Services
@inject AuthService AuthService
@inject NavigationManager Nav
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Autentificare</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>Email</label>
                        <input @bind="email" class="form-control" placeholder="nume@exemplu.com" />
                    </div>
                    <div class="mb-3">
                        <label>Parolă</label>
                        <input @bind="password" type="password" class="form-control" />
                    </div>

                    <button class="btn btn-primary w-100" @onclick="HandleLogin">Intră în cont</button>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">@errorMessage</div>
                    }

                    <div class="mt-3 text-center">
                        <p>Nu ai cont? <a href="/register">Înregistrează-te aici</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        errorMessage = "";
        try
        {
            bool isSuccess = await AuthService.Login(email, password);
            if (isSuccess) Nav.NavigateTo("/tickets");
            else errorMessage = "Email sau parolă incorectă!";
        }
        catch { errorMessage = "Eroare de conexiune cu serverul."; }
    }
}