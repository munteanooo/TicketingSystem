<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
                            <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Elevation="4" Class="py-8">
                                <MudText Typo="Typo.h5">Acces Interzis</MudText>
                                <MudText>Nu aveți permisiunile necesare pentru a vizualiza această pagină.</MudText>
                                <MudButton Variant="Variant.Text" Color="Color.Inherit"
                                           Href="/" Class="mt-4">Înapoi la Acasă</MudButton>
                            </MudAlert>
                        </MudContainer>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>404 - Negăsit</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
                    <MudText Typo="Typo.h1" Color="Color.Primary" Style="font-weight: 900;">404</MudText>
                    <MudText Typo="Typo.h5" Class="mb-4">Hopa! Pagina nu a fost găsită.</MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
                        Mergi la Acasă
                    </MudButton>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>